{% extends 'admin/iframe.html.twig' %}
{% block body %}

  <div class="content-wrapper" >
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Timeline</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Réclamation</li>
              <li class="breadcrumb-item active">Traiter Réclamations</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->

      <div class="container-fluid">

        <!-- Timelime example  -->
        <div class="row">
          <div class="col-md-11">
            <!-- The time line -->
            <div class="timeline">
              <!-- timeline time label -->
              {% for rec in reclams %}
              <div class="time-label">
                <span class="bg-red">{{ rec.date|date('d-m-Y') }}</span>
              </div>
              <!-- /.timeline-label -->
              <!-- timeline item -->

              <div>
                {% if(rec.resolu==1) %}
                <i class="fas fa-envelope bg-blue"></i>
                {% else %}
                  <i class="fas fa-envelope bg-red"></i>
                  {% endif %}
                <div class="timeline-item">
                  <span class="time"><i class="fas fa-clock"></i> 12:05</span>
                  <h3 class="timeline-header"><a href="#">{{ rec.name }}</a> vous a envoyé une réclamation</h3>

                  <div class="timeline-body">
                    {{ rec.message }}
                  </div>
                  <div class="timeline-footer">
                    {% if rec.resolu==0 %}
                    <a class="btn btn-primary btn-sm" href="{{ path('resoudre_rec',{'id':rec.id}) }}">Résoudre</a>
                    {% endif %}
                    <a class="btn btn-danger btn-sm" href="{{ path('reclam_admin_del', {'id': rec.id}) }}" >Supprimer</a>
                  </div>
                </div>
              </div>
              {% endfor %}
              <!-- END timeline item -->


              <div>
                <i class="fas fa-clock bg-gray"></i>
              </div>
            </div>
          </div>
          <!-- /.col -->
        </div>
      </div>
      <!-- /.timeline -->


    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock body %}